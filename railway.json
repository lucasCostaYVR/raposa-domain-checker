{
    "build": {
        "builder": "nixpacks"
    },
    "deploy": {
        "healthcheckPath": "/healthz/",
        "healthcheckTimeout": 300,
        "restartPolicyType": "on_failure",
        "startCommand": "gunicorn src.main:app --workers 2 --worker-class uvicorn.workers.UvicornWorker --bind 0.0.0.0:$PORT --timeout 120 --keepalive 5"
    }
}